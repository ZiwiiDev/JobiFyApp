<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:backgroundTint="@color/cardView"
    app:cardCornerRadius="25dp"
    app:cardElevation="2dp"
    android:id="@+id/cardViewSolicitudes"
    app:cardUseCompatPadding="true">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/adapter_categorias"
        android:orientation="horizontal" >

        <TextView
            android:id="@+id/nombreVacanteSolicitudCardView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_marginStart="20dp"
            android:layout_marginTop="10dp"
            android:layout_marginEnd="20dp"
            android:layout_marginBottom="5dp"
            android:gravity="left"
            android:text="Texto"
            android:maxLines="1"
            android:ellipsize="end"
            android:textAllCaps="true"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:textColor="@color/white"
            android:textSize="16sp"
            android:textStyle="bold"
            android:typeface="serif"
            tools:ignore="RtlHardcoded" />

        <TextView
            android:id="@+id/numSolicitudCardViewTitulo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/nombreVacanteSolicitudCardView"
            android:layout_marginStart="20dp"
            android:textColor="@color/white"
            android:gravity="center"
            android:text="@string/numSolicitud"
            android:textSize="12sp"
            android:typeface="serif"
            tools:ignore="RtlHardcoded" />

        <TextView
            android:id="@+id/numSolicitudCardView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:layout_marginEnd="5dp"
            android:layout_below="@+id/nombreVacanteSolicitudCardView"
            android:layout_toEndOf="@+id/numSolicitudCardViewTitulo"
            android:gravity="left"
            android:text="Texto"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:textColor="@color/white"
            android:textSize="12sp"
            android:textStyle="bold"
            android:typeface="serif"
            tools:ignore="RtlHardcoded" />

        <TextView
            android:id="@+id/fechaSolicitudCardViewTitulo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/numSolicitudCardViewTitulo"
            android:layout_marginStart="20dp"
            android:layout_marginTop="3dp"
            android:gravity="right"
            android:textColor="@color/white"
            android:text="@string/fechaSolicitud"
            android:textSize="12sp"
            android:typeface="serif"
            tools:ignore="RtlHardcoded" />

        <TextView
            android:id="@+id/fechaSolicitudCardView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/numSolicitudCardView"
            android:layout_marginStart="10dp"
            android:layout_marginTop="2dp"
            android:layout_marginEnd="5dp"
            android:layout_toEndOf="@+id/fechaSolicitudCardViewTitulo"
            android:gravity="left"
            android:text="Texto"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:textColor="@color/white"
            android:textSize="12sp"
            android:textStyle="bold"
            android:typeface="serif"
            tools:ignore="RtlHardcoded" />

        <ImageView
            android:id="@+id/btnDescargarCVCardView"
            android:layout_width="66dp"
            android:layout_height="96dp"
            android:layout_marginStart="280dp"
            android:layout_marginTop="-10dp"
            android:contentDescription=""
            app:srcCompat="@mipmap/iconodescargarcv_foreground" />

    </RelativeLayout>

</androidx.cardview.widget.CardView>
